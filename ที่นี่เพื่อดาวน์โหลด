<body>
    <h1>Demo Slot ‚Äì PG‚Äëstyle</h1>
    <div id="slot">
        <div class="reel" id="r1">üçí</div>
        <div class="reel" id="r2">üçí</div>
        <div class="reel" id="r3">üçí</div>
    </div>
    <div id="controls">
        <button id="spinBtn">SPIN (Bet 1,000)</button>
    </div>
    <div id="credit">Credit: 300,000</div>
    <div id="log"></div>

<script>
(() => {
    const symbols = ["üçí","üîî","üíé","7Ô∏è‚É£","üçÄ"];
    const multipliers = { "üçí":2, "üîî":3, "üíé":5, "7Ô∏è‚É£":10, "üçÄ":20 };
    let credit = 300000;
    const bet = 1000;
    const reels = ["r1","r2","r3"].map(id=>document.getElementById(id));
    const spinBtn = document.getElementById("spinBtn");
    const creditEl = document.getElementById("credit");
    const logEl = document.getElementById("log");

    function log(msg){
        logEl.textContent = (new Date()).toLocaleTimeString() + " ‚Äî " + msg + "\n" + logEl.textContent;
    }

    function updateCredit(){
        creditEl.textContent = "Credit: " + credit.toLocaleString();
        spinBtn.disabled = credit < bet;
    }

    function randomSymbol(){return symbols[Math.floor(Math.random()*symbols.length)];}

    function spin(){
        if(credit < bet) return;
        credit -= bet;
        let result = [];
        reels.forEach((reel,i)=>{
            const sym = randomSymbol();
            result.push(sym);
            reel.textContent = sym;
        });

        let payout = 0;
        if(result.every(s=>s===result[0])){ // all match
            payout = bet * multipliers[result[0]];
            credit += payout;
            log("WIN! " + result[0].repeat(3) + " pays x" + multipliers[result[0]] + " ‚Üí +" + payout.toLocaleString());
        } else {
            log("Lose. " + result.join(" "));
        }
        updateCredit();
    }

    spinBtn.addEventListener("click", spin);
    updateCredit();
})();
</script>
